---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import About from '../components/About.astro';
import Insights from '../components/Insights.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<Layout title="Exceedant - Business Consulting & Investment Intelligence">
  <header class="navbar fixed top-0 left-0 right-0 z-50 transition-all duration-300">
    <nav class="container-padding py-4">
      <div class="flex items-center justify-between">
        <a href="/" class="flex items-center">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768399474/auto-site-builder/Exceedant/image_0.png" 
            alt="Exceedant" 
            class="h-8 md:h-10"
          />
        </a>
        
        <div class="hidden lg:flex items-center gap-8">
          <a href="#services" class="text-white hover:text-brand-green transition-colors">Services</a>
          <a href="#about" class="text-white hover:text-brand-green transition-colors">About</a>
          <a href="#insights" class="text-white hover:text-brand-green transition-colors">Insights</a>
          <a href="#contact" class="btn-primary py-2 px-6">Contact Us</a>
        </div>
        
        <!-- Mobile menu button -->
        <button class="lg:hidden text-white" id="mobile-menu-button">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      
      <!-- Mobile menu -->
      <div class="hidden lg:hidden mt-4 pb-4 border-t border-white/20 pt-4" id="mobile-menu">
        <div class="flex flex-col gap-4">
          <a href="#services" class="text-white hover:text-brand-green transition-colors">Services</a>
          <a href="#about" class="text-white hover:text-brand-green transition-colors">About</a>
          <a href="#insights" class="text-white hover:text-brand-green transition-colors">Insights</a>
          <a href="#contact" class="btn-primary py-2 px-6 text-center">Contact Us</a>
        </div>
      </div>
    </nav>
  </header>
  
  <main>
    <Hero />
    <Services />
    <About />
    <Insights />
    <CTA />
  </main>
  
  <Footer />
  
  <script>
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
    
    // Close mobile menu when clicking on a link
    const mobileLinks = mobileMenu?.querySelectorAll('a');
    mobileLinks?.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu?.classList.add('hidden');
      });
    });
  </script>
  
  <script>
    import '../scripts/animations.ts';
  </script>
</Layout>

<style>
  .navbar {
    background-color: transparent;
  }
  
  .navbar-scrolled {
    @apply bg-white shadow-lg;
  }
  
  .navbar-scrolled a:not(.btn-primary) {
    @apply text-brand-teal;
  }
  
  .navbar-scrolled #mobile-menu-button {
    @apply text-brand-teal;
  }
</style>