<section id="contact" class="py-24 md:py-32 bg-gradient-to-br from-amber-50 via-rose-50/30 to-stone-50 relative overflow-hidden">
  <!-- Decorative elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-amber-200/30 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-rose-200/30 rounded-full blur-3xl"></div>
  
  <div class="relative z-10 max-w-4xl mx-auto px-6 md:px-8 lg:px-12 text-center">
    <div class="animate-on-scroll">
      <p class="text-amber-700 font-semibold uppercase tracking-wider text-sm mb-4">Get Started</p>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-stone-900 tracking-tight mb-6">
        Ready to <span class="gradient-text">Exceed</span> Expectations?
      </h2>
      <p class="text-xl md:text-2xl text-stone-700 mb-10 max-w-2xl mx-auto">
        Let's explore how we can work together to achieve your current and future project goals.
      </p>
      
      <div class="bg-white rounded-3xl shadow-2xl p-8 md:p-12 border border-stone-100">
        <div class="grid md:grid-cols-2 gap-8 mb-8">
          <div class="text-left">
            <h3 class="font-bold text-stone-900 mb-2 flex items-center gap-2">
              <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              Call Us
            </h3>
            <a href="tel:+18772243180" class="text-lg text-amber-700 hover:text-amber-800 font-semibold">+1 (877) 224-3180</a>
            <p class="text-stone-600 text-sm mt-1">EST USA Business Hours</p>
          </div>
          <div class="text-left">
            <h3 class="font-bold text-stone-900 mb-2 flex items-center gap-2">
              <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              Email Us
            </h3>
            <p class="text-lg text-stone-700">Use our contact form</p>
            <p class="text-stone-600 text-sm mt-1">We'll respond within 24 hours</p>
          </div>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#contact-form" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-amber-600 text-white rounded-full font-semibold hover:bg-amber-700 hover:scale-105 transition-all duration-300 shadow-xl shadow-amber-600/25 text-lg">
            Contact Form
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a href="#rfp" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-stone-900 rounded-full font-semibold hover:bg-stone-50 hover:scale-105 transition-all duration-300 shadow-xl text-lg border border-stone-200">
            Request for Proposal
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>