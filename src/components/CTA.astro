<section id="contact" class="section-padding bg-gradient-emerald text-white relative overflow-hidden" data-module-key="contact_cta" data-dominant-signal="headline">
  <!-- Background elements -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-1/5 w-[500px] h-[500px] bg-emerald-700/30 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-0 right-1/5 w-[400px] h-[400px] bg-emerald-600/20 rounded-full blur-[100px]"></div>
  </div>
  
  <div class="relative z-10 max-w-4xl mx-auto container-padding text-center">
    <h2 class="text-3xl md:text-4xl font-light tracking-tight mb-6 animate-on-scroll" data-section-header-recipe="primary">
      We're Committed to Helping You Exceed Expectations
    </h2>
    <p class="text-xl leading-relaxed mb-12 text-emerald-100 animate-on-scroll">
      Set up a confidential phone or video meeting to discuss your needs today.
    </p>
    
    <div class="space-y-6 animate-on-scroll">
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/request-for-proposal" 
          class="bg-white text-emerald-900 px-8 py-4 rounded-sm hover:bg-emerald-50 transition-all duration-300 inline-flex items-center justify-center gap-2 group font-medium shadow-md hover:shadow-lg"
        >
          Request for Proposal
          <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
        <a 
          href="/contact" 
          class="border border-white/30 px-8 py-4 rounded-sm hover:bg-white/10 transition-all duration-300 inline-flex items-center justify-center gap-2"
        >
          Contact Form
        </a>
      </div>
      
      <div class="pt-8">
        <p class="text-2xl font-light mb-2">
          Phone: <a href="tel:+18772243180" class="hover:text-emerald-200 transition-colors">+1 (877) 224-3180</a> EST USA
        </p>
        <p class="text-emerald-200">
          Available for confidential consultations
        </p>
      </div>
    </div>
  </div>
</section>