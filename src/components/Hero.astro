---
import '../styles/global.css';
---

<section id="home" class="relative min-h-screen overflow-hidden bg-gradient-to-b from-stone-50 to-neutral-50">
  <!-- Hero Background Image with Parallax -->
  <div class="absolute inset-0 hero-parallax">
    <img 
      src="https://res.cloudinary.com/dil14r8je/image/upload/v1768399474/auto-site-builder/Exceedant/image_4.jpg" 
      alt="Exceedant team collaboration"
      class="w-full h-full object-cover opacity-90"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-neutral-900/80 via-neutral-900/60 to-neutral-900/40"></div>
  </div>
  
  <!-- Navigation -->
  <nav class="relative z-20 px-6 lg:px-8">
    <div class="max-w-7xl mx-auto py-6">
      <div class="flex items-center justify-between">
        <a href="/" class="flex items-center">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768399474/auto-site-builder/Exceedant/image_0.png" 
            alt="Exceedant Logo" 
            class="h-10 w-auto"
          />
        </a>
        <div class="hidden md:flex items-center gap-8">
          <a href="#services" class="text-white/90 hover:text-white transition-colors duration-300">Services</a>
          <a href="#expertise" class="text-white/90 hover:text-white transition-colors duration-300">Expertise</a>
          <a href="#contact" class="text-white/90 hover:text-white transition-colors duration-300">Contact</a>
          <a href="https://exceedant.com/request-for-proposal/" class="inline-flex items-center px-6 py-2.5 backdrop-blur-xl bg-white/10 border border-white/20 rounded-full text-white font-medium hover:bg-white/20 transition-all duration-300">
            Request Proposal
          </a>
        </div>
      </div>
    </div>
  </nav>
  
  <!-- Hero Content -->
  <div class="relative z-10 flex items-center justify-center min-h-screen px-6 lg:px-8">
    <div class="max-w-5xl mx-auto text-center">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-light text-white tracking-tight mb-6 animate-fade-up">
        Invisible insights.<br/>Visible results.
      </h1>
      <p class="text-xl lg:text-2xl text-white/80 max-w-3xl mx-auto mb-12 animate-fade-up" style="animation-delay: 0.2s">
        We connect people with information & insights invisible to others
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-up" style="animation-delay: 0.4s">
        <a href="#services" class="inline-flex items-center px-8 py-4 text-lg font-medium bg-white text-neutral-900 rounded-full hover:bg-neutral-100 hover:scale-105 transition-all duration-300 shadow-lg">
          Explore Our Services
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
        <a href="https://exceedant.com/contact/" class="inline-flex items-center px-8 py-4 text-lg font-medium backdrop-blur-xl bg-white/10 border border-white/20 rounded-full text-white hover:bg-white/20 transition-all duration-300">
          Get Started Today
        </a>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<script>
  import '../scripts/animations.ts';
</script>