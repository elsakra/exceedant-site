---
---

<section id="home" class="relative min-h-screen flex items-center overflow-hidden" data-hero-pattern="editorial" data-module-key="hero" data-dominant-signal="image">
  <!-- Hero Background Image with Overlay -->
  <img 
    src="https://res.cloudinary.com/dil14r8je/image/upload/v1768399474/auto-site-builder/Exceedant/image_4.jpg" 
    alt="Strategic consulting session"
    class="absolute inset-0 w-full h-full object-cover"
  />
  <div class="absolute inset-0 bg-gradient-overlay"></div>
  
  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto container-padding section-padding">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <div class="space-y-8 animate-on-scroll">
        <h1 class="text-5xl md:text-6xl font-light tracking-tight text-neutral-900" data-section-header-recipe="primary">
          Intelligence that <span class="italic text-emerald-800">exceeds</span> expectations
        </h1>
        <p class="text-xl leading-relaxed text-neutral-700 max-w-xl">
          We connect people with information & insights. Discover opportunities & risks invisible to others with Exceedant.
        </p>
        <div class="flex flex-wrap gap-4">
          <a 
            href="/request-for-proposal" 
            data-button-recipe="primary"
            class="group"
          >
            Request Proposal
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a 
            href="#services" 
            class="px-8 py-4 text-neutral-600 hover:text-neutral-900 transition-all duration-300"
          >
            Explore Services
          </a>
        </div>
      </div>
      
      <!-- Visual Element -->
      <div class="relative hidden lg:block">
        <div class="absolute inset-0 bg-gradient-radial from-emerald-900/10 to-emerald-800/5 rounded-full blur-3xl"></div>
      </div>
    </div>
  </div>
</section>