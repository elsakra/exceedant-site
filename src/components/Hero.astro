---
---

<section class="relative min-h-screen overflow-hidden bg-gradient-to-br from-stone-50 via-amber-50/30 to-rose-50/20 noise-texture">
  <!-- Navigation -->
  <nav class="absolute top-0 left-0 right-0 z-50 px-6 py-6 md:px-8 lg:px-12">
    <div class="mx-auto max-w-7xl">
      <div class="flex items-center justify-between">
        <a href="/" class="flex items-center">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768399474/auto-site-builder/Exceedant/image_0.png" 
            alt="Exceedant" 
            class="h-10 w-auto"
          />
        </a>
        <div class="hidden md:flex items-center gap-8">
          <a href="#services" class="text-stone-700 hover:text-amber-700 transition-colors duration-200 font-medium">Services</a>
          <a href="#about" class="text-stone-700 hover:text-amber-700 transition-colors duration-200 font-medium">About</a>
          <a href="#insights" class="text-stone-700 hover:text-amber-700 transition-colors duration-200 font-medium">Insights</a>
          <a href="#contact" class="inline-flex items-center gap-2 px-6 py-3 bg-amber-600 text-white rounded-full font-semibold hover:bg-amber-700 hover:scale-105 transition-all duration-300 shadow-lg shadow-amber-600/25">
            Get Started
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Content -->
  <div class="relative z-10 flex min-h-screen items-center px-6 md:px-8 lg:px-12">
    <div class="mx-auto max-w-7xl w-full grid lg:grid-cols-2 gap-12 items-center">
      <div class="animate-fade-up">
        <p class="text-amber-700 font-semibold uppercase tracking-wider text-sm mb-4">Business Consulting Excellence</p>
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-black tracking-tight text-stone-900 leading-tight mb-6">
          Exceed Every<br/>
          <span class="gradient-text">Expectation</span>
        </h1>
        <p class="text-xl md:text-2xl text-stone-700 leading-relaxed mb-8 max-w-xl">
          Deep insights and strategic consulting that uncover opportunities invisible to others.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#contact" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-amber-600 text-white rounded-full font-semibold hover:bg-amber-700 hover:scale-105 transition-all duration-300 shadow-xl shadow-amber-600/25 text-lg">
            Request Consultation
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a href="tel:+18772243180" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-stone-900 rounded-full font-semibold hover:bg-stone-50 hover:scale-105 transition-all duration-300 shadow-xl text-lg border border-stone-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Call Now
          </a>
        </div>
      </div>
      <div class="relative animate-fade-in">
        <div class="relative rounded-2xl overflow-hidden shadow-2xl">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768399474/auto-site-builder/Exceedant/image_1.jpg" 
            alt="Exceedant Leadership" 
            class="w-full h-auto object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-stone-900/20 to-transparent"></div>
        </div>
        <!-- Floating accent cards -->
        <div class="absolute -bottom-6 -left-6 bg-white rounded-xl p-6 shadow-xl animate-fade-up" style="animation-delay: 0.2s">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <p class="font-bold text-stone-900">10+ Years</p>
              <p class="text-sm text-stone-600">Industry Excellence</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>