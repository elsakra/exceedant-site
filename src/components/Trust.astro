<section id="trust" class="section-padding bg-gradient-emerald text-white relative overflow-hidden" data-module-key="client_trust" data-dominant-signal="quote">
  <!-- Background texture -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.05)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.05)_1px,transparent_1px)] bg-[size:64px_64px]"></div>
  </div>
  
  <div class="relative z-10 max-w-7xl mx-auto container-padding">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <div class="animate-on-scroll">
        <h2 class="text-3xl md:text-4xl font-light tracking-tight mb-8" data-section-header-recipe="primary">
          Trusted by leaders worldwide
        </h2>
        <blockquote class="text-xl leading-relaxed mb-8 italic">
          "For over a decade, Exceedant has become known for deep dive, layered business consulting including 
          investment investigation tools that are unmatched."
        </blockquote>
        <div class="flex items-center gap-4">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768399476/auto-site-builder/Exceedant/image_9.jpg" 
            alt="Success celebration"
            class="w-16 h-16 rounded-full object-cover ring-4 ring-white/20"
          />
          <div>
            <p class="font-medium">Global Leadership Team</p>
            <p class="text-emerald-200">Exceedant Clients</p>
          </div>
        </div>
      </div>
      
      <div class="space-y-6 animate-on-scroll">
        <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded p-6 card-hover">
          <p class="text-4xl md:text-5xl font-light text-white mb-2" data-stat-recipe="primary">10+</p>
          <p class="text-emerald-200">Years of Excellence</p>
        </div>
        <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded p-6 card-hover">
          <p class="text-4xl md:text-5xl font-light text-white mb-2" data-stat-recipe="primary">Global</p>
          <p class="text-emerald-200">Institutional Clients</p>
        </div>
        <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded p-6 card-hover">
          <p class="text-4xl md:text-5xl font-light text-white mb-2" data-stat-recipe="primary">24/5</p>
          <p class="text-emerald-200">Confidential Support</p>
        </div>
      </div>
    </div>
  </div>
</section>