  },
  {
    number: "02",
    title: "U.S. Tariffs & Litigation",
    description: "Event-driven opportunities and risks stemming from U.S. Tariffs & related Litigation.",
    image: "https://res.cloudinary.com/dil14r8je/image/upload/v1768399485/auto-site-builder/Exceedant/image_10.jpg"
  },
  {
    number: "03",
    title: "Healthcare Industry Impacts",
    description: "The Impacts on Various Enterprise Companies in the Healthcare Industry Due to Litigation & Investigations.",
    image: "https://res.cloudinary.com/dil14r8je/image/upload/v1768399476/auto-site-builder/Exceedant/image_8.jpg"
  },
  {
    number: "04",
    title: "Global M&A Activity",
    description: "Global and U.S. M&A activity & consolidation in the brokerage, portal & adjacent industries.",
