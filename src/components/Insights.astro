---
const insights = [
  {
    title: "U.S. Real Estate Disruption",
    description: "Regulation, investigation & litigation catalysts transforming the brokerage & portal industries.",
    category: "Real Estate"
  },
  {
    title: "Event-Driven Opportunities",
    description: "Risks and opportunities stemming from U.S. Tariffs & related litigation impacts.",
    category: "Trade & Policy"
  },
  {
    title: "Healthcare Industry Impacts",
    description: "Enterprise companies navigating litigation & investigations in the healthcare sector.",
    category: "Healthcare"
  },
  {
    title: "M&A Consolidation Trends",
    description: "Global and U.S. M&A activity in brokerage, portal & adjacent industries.",
    category: "M&A"
  },
  {
    title: "AI Investment Risks",
    description: "Evaluating increased risks due to AI investments & speculative returns.",
    category: "Technology"
  },
  {
    title: "Data Center Growth",
    description: "Growth prospects and investment opportunities in data center infrastructure.",
    category: "Infrastructure"
  }
];
---

<section id="insights" class="py-24 md:py-32 bg-stone-900 text-white relative overflow-hidden">
  <!-- Background texture -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(251,146,60,0.15),transparent_70%)]"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-6 md:px-8 lg:px-12">
    <div class="text-center mb-16 animate-on-scroll">
      <p class="text-amber-400 font-semibold uppercase tracking-wider text-sm mb-4">Research & Insights</p>
      <h2 class="text-4xl md:text-5xl font-bold tracking-tight mb-6">
        Areas of <span class="text-amber-400">Interest</span>
      </h2>
      <p class="text-xl text-stone-300 max-w-3xl mx-auto">
        Recent focus areas and emerging opportunities identified by our clients and research teams.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {insights.map((insight, index) => (
        <div 
          class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-white/20 transition-all duration-300 animate-on-scroll"
          style={`animation-delay: ${index * 100}ms`}
        >
          <span class="inline-block px-3 py-1 bg-amber-400/20 text-amber-400 text-sm font-medium rounded-full mb-4">
            {insight.category}
          </span>
          <h3 class="text-xl font-bold mb-3">{insight.title}</h3>
          <p class="text-stone-400 leading-relaxed">{insight.description}</p>
        </div>
      ))}
    </div>

    <div class="text-center mt-12 animate-on-scroll">
      <a href="#contact" class="inline-flex items-center gap-2 px-8 py-4 bg-amber-500 text-stone-900 rounded-full font-semibold hover:bg-amber-400 hover:scale-105 transition-all duration-300 shadow-xl shadow-amber-500/25">
        Explore Research Center
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>