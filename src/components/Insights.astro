<section id="insights" class="section-padding bg-stone-50" data-module-key="insights_showcase" data-dominant-signal="stat">
  <div class="max-w-7xl mx-auto container-padding">
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="text-3xl md:text-4xl font-light tracking-tight text-neutral-900 mb-6" data-section-header-recipe="primary">
        Recent Areas of Interest
      </h2>
      <p class="text-lg leading-relaxed text-neutral-600 max-w-3xl mx-auto">
        Examples of general subject areas our clients are exploring
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Insight 1 -->
      <div class="bg-white border border-neutral-200 rounded p-8 shadow-sm card-hover animate-on-scroll group" data-card-recipe="primary">
        <span class="text-4xl md:text-5xl font-light text-emerald-800 mb-2 block" data-stat-recipe="primary">01.</span>
        <h3 class="text-xl font-medium mb-3">Real Estate Disruption</h3>
        <p class="text-neutral-600 leading-relaxed">
          Disruption impacting the U.S. real estate brokerage & portal industries through regulation, investigation & litigation.
        </p>
        <img 
          src="https://res.cloudinary.com/dil14r8je/image/upload/v1768399485/auto-site-builder/Exceedant/image_10.jpg" 
          alt="Global reach"
          class="mt-6 w-full h-32 object-cover rounded group-hover:scale-105 transition-transform duration-300"
        />
      </div>
      
      <!-- Insight 2 -->
      <div class="bg-white border border-neutral-200 rounded p-8 shadow-sm card-hover animate-on-scroll group" data-card-recipe="primary">
        <span class="text-4xl md:text-5xl font-light text-emerald-800 mb-2 block" data-stat-recipe="primary">02.</span>
        <h3 class="text-xl font-medium mb-3">U.S. Tariffs Impact</h3>
        <p class="text-neutral-600 leading-relaxed">
          Event-driven opportunities and risks stemming from U.S. Tariffs & related Litigation.
        </p>
        <img 
          src="https://res.cloudinary.com/dil14r8je/image/upload/v1768399476/auto-site-builder/Exceedant/image_8.jpg" 
          alt="Research documentation"
          class="mt-6 w-full h-32 object-cover rounded group-hover:scale-105 transition-transform duration-300"
        />
      </div>
      
      <!-- Insight 3 -->
      <div class="bg-white border border-neutral-200 rounded p-8 shadow-sm card-hover animate-on-scroll group" data-card-recipe="primary">
