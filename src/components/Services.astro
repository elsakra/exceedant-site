---
const services = [
  {
    title: "Audit & Assurance",
    description: "Financial & regulatory audits, internal controls, risk assurance, and ESG verification for sustainable growth.",
    icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
    features: ["Financial Reporting Advisory", "Internal Controls & Risk", "Sustainability & ESG Assurance"]
  },
  {
    title: "Regulatory & Legal",
    description: "Navigate complex legal landscapes with our corporate advisory, cross-border planning, and regulatory compliance services.",
    icon: "M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3",
    features: ["Corporate Advisory", "International Transactions", "Regulatory Services"]
  },
  {
    title: "Technology & Transformation",
    description: "Drive digital innovation with cloud solutions, AI analytics, cybersecurity, and enterprise system implementations.",
    icon: "M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
    features: ["Digital Transformation", "Cybersecurity & Privacy", "Enterprise Technology"]
  },
  {
    title: "Strategy & Transactions",
    description: "Expert M&A advisory, risk management, financial restructuring, and real estate portfolio optimization.",
    icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z",
    features: ["Corporate Strategy & M&A", "Risk Management", "Real Estate Advisory"]
  }
];
---

<section id="services" class="section-padding bg-white">
  <div class="container-padding">
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-light text-brand-teal mb-4">
        Our Core <span class="font-medium">Services & Products</span>
      </h2>
      <p class="text-xl text-text-secondary max-w-3xl mx-auto">
        Comprehensive solutions that deliver measurable financial, economic, legal, and regulatory acumen
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8 lg:gap-12 stagger-grid">
      {services.map((service) => (
        <div class="stagger-item group bg-white border border-border-light rounded-2xl p-8 lg:p-10 card-hover">
          <div class="flex items-start gap-6">
            <div class="flex-shrink-0 w-16 h-16 bg-brand-green/10 rounded-xl flex items-center justify-center group-hover:bg-brand-green/20 transition-colors duration-300">
              <svg class="w-8 h-8 text-brand-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={service.icon}></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-2xl font-medium text-brand-teal mb-3">{service.title}</h3>
              <p class="text-text-secondary mb-6 leading-relaxed">{service.description}</p>
              <ul class="space-y-2">
                {service.features.map((feature) => (
                  <li class="flex items-center gap-2 text-sm text-text-secondary">
                    <svg class="w-4 h-4 text-brand-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a href="#contact" class="btn-primary inline-flex items-center">
        Discuss Your Needs
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>