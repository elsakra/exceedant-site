---
const services = [
  {
    title: "Audit & Assurance",
    description: "Independent audits, financial reporting advisory, and ESG assurance for comprehensive governance.",
    icon: "shield",
    features: ["Financial & Regulatory Audits", "Internal Controls", "ESG Verification"]
  },
  {
    title: "Strategy & Transactions",
    description: "M&A advisory, risk management, and financial restructuring for transformative growth.",
    icon: "chart",
    features: ["Corporate Strategy", "M&A Advisory", "Risk Management"]
  },
  {
    title: "Technology & Transformation",
    description: "Digital transformation, cybersecurity, and enterprise technology implementation.",
    icon: "tech",
    features: ["Cloud & AI Solutions", "Cybersecurity", "IT Modernization"]
  },
  {
    title: "Regulatory & Legal",
    description: "Navigate complex regulations with corporate advisory and compliance expertise.",
    icon: "legal",
    features: ["Corporate Advisory", "Regulatory Services", "Cross-border Planning"]
  }
];
---

<section id="services" class="py-24 md:py-32 bg-stone-50">
  <div class="max-w-7xl mx-auto px-6 md:px-8 lg:px-12">
    <div class="text-center mb-16 animate-on-scroll">
      <p class="text-amber-700 font-semibold uppercase tracking-wider text-sm mb-4">Core Services</p>
      <h2 class="text-4xl md:text-5xl font-bold text-stone-900 tracking-tight mb-6">
        Solutions That Drive <span class="gradient-text">Results</span>
      </h2>
      <p class="text-xl text-stone-600 max-w-3xl mx-auto">
        Comprehensive business consulting services that deliver measurable financial, economic, legal, and regulatory acumen.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      {services.map((service, index) => (
        <div 
          class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 animate-on-scroll border border-stone-100"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="w-14 h-14 bg-amber-100 rounded-xl flex items-center justify-center mb-6">
            {service.icon === 'shield' && (
              <svg class="w-7 h-7 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            )}
            {service.icon === 'chart' && (
              <svg class="w-7 h-7 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            )}
            {service.icon === 'tech' && (
              <svg class="w-7 h-7 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            )}
            {service.icon === 'legal' && (
              <svg class="w-7 h-7 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path>
              </svg>
            )}
          </div>
          <h3 class="text-2xl font-bold text-stone-900 mb-3">{service.title}</h3>
          <p class="text-stone-600 mb-6">{service.description}</p>
          <ul class="space-y-2">
            {service.features.map(feature => (
              <li class="flex items-center gap-2 text-stone-700">
                <svg class="w-5 h-5 text-amber-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>