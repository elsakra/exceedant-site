<section id="clients" class="py-24 md:py-32 lg:py-40 bg-slate-950 relative overflow-hidden">
  <!-- Background Texture -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(30,58,138,0.15),transparent_70%)]"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-12">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-light text-white tracking-tight mb-4">
        Trusted by <span class="font-serif italic">Leaders</span> Worldwide
      </h2>
      <p class="text-lg text-white/70 max-w-3xl mx-auto">
        For over a decade, Exceedant has delivered unmatched insights to institutional clients globally.
      </p>
    </div>
    
    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      <div class="text-center animate-on-scroll">
        <div class="text-5xl md:text-6xl font-light text-white mb-2">10+</div>
        <p class="text-white/60">Years of Excellence</p>
      </div>
      <div class="text-center animate-on-scroll">
        <div class="text-5xl md:text-6xl font-light text-white mb-2">500+</div>
        <p class="text-white/60">Global Clients</p>
      </div>
      <div class="text-center animate-on-scroll">
        <div class="text-5xl md:text-6xl font-light text-white mb-2">6</div>
        <p class="text-white/60">Major Industries</p>
      </div>
    </div>
    
    <!-- Client Types -->
    <div class="bg-white/5 backdrop-blur-xl rounded-2xl p-10 border border-white/10 animate-on-scroll">
      <h3 class="text-2xl font-semibold text-white mb-8 text-center">Our Institutional Clients Include</h3>
      
