---
const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: "Services",
    links: [
      { label: "Audit & Assurance", href: "#services" },
      { label: "Strategy & Transactions", href: "#services" },
      { label: "Technology & Transformation", href: "#services" },
      { label: "Regulatory & Legal", href: "#services" }
    ]
  },
  {
    title: "Company",
    links: [
      { label: "About Us", href: "#about" },
      { label: "Industries", href: "#services" },
      { label: "Research Center", href: "#insights" },
      { label: "Careers", href: "#" }
    ]
  },
  {
    title: "Resources",
    links: [
      { label: "News and Insights", href: "#insights" },
      { label: "Request for Proposal", href: "#contact" },
      { label: "Contact Form", href: "#contact" },
      { label: "Network", href: "#" }
    ]
  }
];

const legalLinks = [
  { label: "Privacy Policy", href: "#" },
  { label: "Terms of Use", href: "#" },
  { label: "Cookie Policy", href: "#" },
  { label: "CCPA", href: "#" },
  { label: "DMCA", href: "#" }
];
---

<footer class="bg-stone-900 text-white pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-6 md:px-8 lg:px-12">
    <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-8 mb-12">
      <!-- Brand column -->
      <div class="lg:col-span-2">
        <a href="/" class="inline-block mb-6">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768399474/auto-site-builder/Exceedant/image_0.png" 
            alt="Exceedant" 
            class="h-10 w-auto brightness-0 invert"
          />
        </a>
        <p class="text-stone-400 mb-6 max-w-sm">
          We connect people with information & insights. Discover opportunities & risks invisible to others with Exceedant.
        </p>
        <div class="flex gap-4">
          <a href="https://linkedin.com/company/exceedant" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-white/20 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Links columns -->
      {footerLinks.map(column => (
        <div>
          <h3 class="font-semibold text-white mb-4">{column.title}</h3>
          <ul class="space-y-3">
            {column.links.map(link => (
              <li>
                <a href={link.href} class="text-stone-400 hover:text-amber-400 transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Contact info -->
    <div class="border-t border-stone-800 pt-8 mb-8">
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <p class="text-stone-400 mb-2">Contact Us</p>
          <a href="tel:+18772243180" class="text-xl font-semibold text-amber-400 hover:text-amber-300 transition-colors">
            +1 (877) 224-3180 EST USA
          </a>
        </div>
        <div class="md:text-right">
          <p class="text-stone-400 mb-2">Inclusion and Equality</p>
          <p class="text-sm text-stone-500">Committed to diversity and equal opportunity</p>
        </div>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-stone-800 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-stone-500 text-sm">
          Copyright Â© {currentYear} Exceedant. Powered by Exceedant.
        </p>
        <div class="flex flex-wrap gap-4 text-sm">
          {legalLinks.map((link, index) => (
            <>
              <a href={link.href} class="text-stone-500 hover:text-amber-400 transition-colors">
                {link.label}
              </a>
              {index < legalLinks.length - 1 && <span class="text-stone-700">|</span>}
            </>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>